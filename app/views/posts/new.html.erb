<h1>New Post</h1>
<ul>
  <%= form_for [@trip, @post] do |f| %>
      <li>
      <%= f.label "Location" %>
      <%= f.text_field :location_pin %>
    </li>
    <li>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </li>
    <li>
      <%= f.label :body %>
      <%= f.text_area :body  %>
    </li>
    <li>
      <%= f.submit %>
    </li>
  <% end %>
</ul>