<div id="side" class="col-md-2">
  <h2><%= @trip.title %></h2>
  <div class="btn-group">
    <button id="draw-route" type="button" class="btn btn-primary">Draw Route</button>
    <button type="button" class="btn btn-warning"><%= link_to "All Trips", trips_path %></button>
  </div>
  <%= render partial: "loc_posts", locals: {locationpins: @locationpins} %>
</div>

<div id="map" class="col-md-10">
   <div id="map-canvas"></div>
</div>

<% @coords.each do |coord| %>
  <% lat = coord[:lat] %>
  <% lon = coord[:lon] %>
  <% title = coord[:title] %>
  <% body = coord[:body] %>

  <script type="text/javascript">
    $( document ).ready(function() {
      myLatlng = new google.maps.LatLng('<%= lat %>', '<%= lon %>' );
      placeMarker(myLatlng, theMap, '<%= title %>', '<%= body %>');
    });
  </script>
<% end %>
