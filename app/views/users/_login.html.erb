<%= form_for @user, url: "/users/login" do |f| %>
  <div class="form-group">
    <%= f.label :email, "Email: " %>
    <%= f.text_field :email, placeholder: 'LizGilbert@email.com', class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Password: " %>
    <%= f.password_field :password, placeholder: '******', class: 'form-control', required: true %>
  </div>
  <%= f.submit "Log In", class: 'btn btn-info btn-lg' %>
<% end %>
