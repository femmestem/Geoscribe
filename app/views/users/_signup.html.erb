<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :email, "Email: " %>
    <%= f.text_field :email, placeholder: "LizGilbert@email.com", class: 'form-control' %>
  </div>
  <div class="form-group">  
    <%= f.label :password, "Password: " %>
    <%= f.password_field :password, placeholder: "Must be at least 6 characters", class: 'form-control', required: true %>
  </div>
    <div class="form-group">
    <%= f.label :password_confirmation, "Confirm Password: " %>
    <%= f.password_field :password_confirmation, placeholder: "Enter password again", class: 'form-control', required: true %>
  </div>
  <%= f.submit "Create Account", class: 'btn btn-lg btn-warning' %>
<% end %>

<ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
