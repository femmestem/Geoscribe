source 'https://rubygems.org'

gem 'rails', '4.1.1'

gem 'pg'

group :assets do
  gem 'sass-rails', '~> 4.0.3'
  gem 'uglifier', '>= 1.3.0'
  gem 'jquery-rails'
  gem 'turbolinks'
  gem 'jbuilder', '~> 2.0'
end

# speed up development by keeping app running in the background.
gem 'spring',        group: :development

# Use ActiveModel has_secure_password
gem 'bcrypt', '~> 3.1.7'

group :development, :test do
  gem 'faker'
  gem 'rspec-rails'
  gem 'database_cleaner'
end

group :test do
  gem 'shoulda-matchers'
  gem 'factory_girl_rails'
  gem 'capybara'
  gem 'selenium-webdriver'
end

